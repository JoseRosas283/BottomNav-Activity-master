<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".SettingsActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escanear venta"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937" />

    </LinearLayout>

    <!-- Apartado para la búsqueda - FIJO -->
    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/headerLayout"
        android:background="@drawable/search_modern_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_busqueda"
            android:layout_marginEnd="12dp"
            app:tint="#9CA3AF" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Buscar"
            android:textColorHint="#9CA3AF"
            android:textSize="16sp"
            android:textColor="#1F2937" />

        <ImageView
            android:id="@+id/iconoCerrar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_cerrar"
            android:layout_marginStart="12dp"
            app:tint="#9CA3AF" />

    </LinearLayout>

    <!-- APARTADO DEL SCANNER - FIJO -->
    <androidx.cardview.widget.CardView
        android:id="@+id/scannerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchLayout"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- Icono de código de barras -->
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/barcode_modern_border"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_codigo_barras"
                    app:tint="#1F2937" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Scan Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEscanearVenta"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Escanear venta"
                android:textAllCaps="false"
                android:textColor="#3B82F6"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:minHeight="36dp"
                android:minWidth="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="8dp"
                app:strokeColor="#3B82F6"
                app:strokeWidth="1dp"
                app:rippleColor="#1A3B82F6" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- ScrollView con RecyclerView para productos -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scannerCard"
        android:layout_above="@id/bottomNavigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- RecyclerView para productos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Estado vacío (se oculta cuando hay productos) -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_shopping_cart"
                    app:tint="#9CA3AF"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lista vacía"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Escanea productos para comenzar una nueva venta"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

            </LinearLayout>

            <!-- RESUMEN DE VENTAS -->
            <androidx.cardview.widget.CardView
                android:id="@+id/summaryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resumen de venta"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginBottom="16dp" />

                    <!-- Subtotal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Subtotal"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />

                        <TextView
                            android:id="@+id/tvSubtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textSize="14sp"
                            android:textColor="#1F2937" />

                    </LinearLayout>

                    <!-- Impuestos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Impuestos"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />

                        <TextView
                            android:id="@+id/tvTaxes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textSize="14sp"
                            android:textColor="#1F2937" />

                    </LinearLayout>

                    <!-- Descuento -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Descuento"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />

                        <TextView
                            android:id="@+id/tvDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textSize="14sp"
                            android:textColor="#1F2937" />

                    </LinearLayout>

                    <!-- RAYA QUE DIVIDE-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E7EB"
                        android:layout_marginBottom="16dp" />

                    <!-- Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937" />

                        <TextView
                            android:id="@+id/tvTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937" />

                    </LinearLayout>

                    <!-- Finalizar venta Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFinalizarVenta"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Finalizar venta"
                        android:textAllCaps="false"
                        android:textColor="#3B82F6"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:minHeight="48dp"
                        android:minWidth="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:cornerRadius="8dp"
                        app:strokeColor="#3B82F6"
                        app:strokeWidth="1dp"
                        app:rippleColor="#1A3B82F6" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        app:itemIconSize="22dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemBackground="@drawable/rounded_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_menu" />

</RelativeLayout>